<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/welcome_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        android:fontFamily="@font/robotoflex"
        android:fontVariationSettings="'wght' 3000, 'wdth' 100"
        android:text="Последний шаг!"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />
    <TextView
        android:id = "@+id/tell_us_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Для того чтобы получить доступ к основному функционалу приложения, вам необходимо пройти небольшой тест состоящий из /// вопросов"
        app:layout_constraintTop_toBottomOf="@+id/welcome_page4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>