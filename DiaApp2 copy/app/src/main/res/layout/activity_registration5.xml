<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/welcome_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Последний шаг!"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#00171F"
        />
    <TextView
        android:id = "@+id/tell_us_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Для того чтобы получить доступ к основному функционалу приложения, вам необходимо пройти небольшой тест состоящий из /// вопросов"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_light"
        android:textColor="#00171F"
        />
    <Button
        android:id="@+id/button_registration_form5"
        android:layout_width="286dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/roboto_bold"
        android:text="Продолжить"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center"/>

</LinearLayout>